<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:id="@+id/c_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView

            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/c_duanzi_img"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/c_duanzi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/c_duanzi_img"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/c_duanzi_img"
            android:layout_toRightOf="@+id/c_duanzi_img"
            android:text="123456" />

        <TextView
            android:id="@+id/c_duanzi_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/c_duanzi_img"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/c_duanzi_img"
            android:layout_toRightOf="@+id/c_duanzi_img"
            android:text="123456" />



        <com.bwie.wangkui.quarter_hour.recommend.recommend_view.CustomerView
            android:id="@+id/h_tuijian_img4"
            android:src="@mipmap/jia"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/c_duanzi_nr"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="123456789" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />
    </RelativeLayout>

</LinearLayout>
