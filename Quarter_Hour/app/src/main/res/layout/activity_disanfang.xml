<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.wangkui.quarter_hour.user.DisanfangActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/back" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/rests"
        android:layout_below="@+id/back"
        android:layout_marginTop="49dp"
        android:src="@mipmap/denglu" />

    <ImageView
        android:id="@+id/weixin"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_above="@+id/qq"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/weixin1" />

    <ImageView
        android:id="@+id/qq"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weixin"
        android:layout_marginBottom="98dp"
        android:scaleType="fitXY"
        android:src="@mipmap/qq1" />

    <TextView
        android:id="@+id/rests"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weixin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="其他登录方式"
        android:textSize="16dp" />



</RelativeLayout>
