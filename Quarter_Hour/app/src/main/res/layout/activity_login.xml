<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.wangkui.quarter_hour.user.LoginActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="18dp"
            android:text="注册账号"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginTop="80px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/dengtu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/reg"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/denglu" />
    </LinearLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout1"
        android:layout_below="@+id/dengtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="账号"
            android:layout_gravity="center"
            android:inputType="textEmailAddress" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/textinputlayout1"
        android:id="@+id/textinputlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textinputlayout2"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_or_reg_btn_enable"
        android:enabled="false"
        android:text="登录" />

    <TextView
        android:id="@+id/forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="15dp"
        android:text="忘记密码"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/linear3"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/Tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客登录"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
