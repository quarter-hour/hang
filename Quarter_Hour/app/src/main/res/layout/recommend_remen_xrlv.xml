<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="14dp"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@+id/imageView"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/textView"
        android:textSize="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"

        android:text="TextView" />
    <RelativeLayout
        android:id="@+id/rl"
        android:background="#000"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_width="450dp"
        android:layout_height="200dp">
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoView"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginTop="13dp">

        </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

       <com.bwie.wangkui.quarter_hour.recommend.recommend_view.Customer2View
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/videoView"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/videoView"
             />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rl"
        android:layout_below="@+id/rl"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="骑车上高速：不错" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="11dp"
        android:text="骑车上高速：不错" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <com.bwie.wangkui.quarter_hour.recommend.recommend_view.CustomerView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/rl"
        />


</RelativeLayout>
