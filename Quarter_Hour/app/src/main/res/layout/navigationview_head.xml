<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@mipmap/beijingcehua"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/touxiang"
        fresco:roundAsCircle="true"
        android:id="@+id/simpleDraweeView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/simpleDraweeView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_toEndOf="@+id/simpleDraweeView"
        android:text="姓名" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="89dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@mipmap/girl"
        />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/simpleDraweeView"
        android:layout_below="@+id/simpleDraweeView"
        android:layout_marginStart="10dp"
        android:hint="点击编辑个性签名"
        android:background="@null"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>